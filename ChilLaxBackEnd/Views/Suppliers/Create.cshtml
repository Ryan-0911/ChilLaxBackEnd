@model ChilLaxBackEnd.Models.Supplier

@{
    ViewBag.Title = "Create";
}

<h2>新增供應商作業</h2>


@using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>請輸入要新增之供應商資訊</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            供應商名稱
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.supplier_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            聯絡電話
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_tel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.supplier_tel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            通訊地址
            <div class="col-md-10">
                @Html.EditorFor(model => model.supplier_address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.supplier_address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="送出並儲存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消新增", "List")
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
