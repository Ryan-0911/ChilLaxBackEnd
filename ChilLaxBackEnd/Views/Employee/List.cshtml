@model IEnumerable<ChilLaxBackEnd.Models.ViewModels.EmployeeViewModel>

@{
    ViewBag.Title = "List";
}

<h2>員工資料表</h2>

<p>
    @Html.ActionLink("新增員工", "Create", null, new { @class = "btn btn-outline-primary btn-sm" })
</p>
<table class="table first table-hover">
    <thead>
        <tr class="border-bottom border-black table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.emp_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_permission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_password)
            </th>
            <th>
                編輯
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_id)
                </td>
                <td>
                    @{
                        string strAvailable;
                        if (item.available)
                        {
                            strAvailable = "在職";
                        }
                        else
                        {
                            strAvailable = "離職";
                        }
                    }
                    @Html.DisplayFor(modelItem => strAvailable)
                </td>
                <td>
                    @{
                        string displayPermission;
                        if (item.emp_permission == true)
                        {
                            displayPermission = "主管";
                        }
                        else if (item.emp_permission == false)
                        {
                            displayPermission = "員工";
                        }
                        else
                        {
                            displayPermission = item.emp_permission.ToString();
                        }
                    }

                    @Html.DisplayFor(modelItem => displayPermission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_password)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.emp_id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
