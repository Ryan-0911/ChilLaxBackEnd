@using ChilLaxBackEnd.ViewModel
@model  IEnumerable<MemberViewModel>

@{
    ViewBag.Title = "List";
}


<style>
    /*改1*/
    .container {
        width: 1350px;
        /*        overflow-x: auto;
        white-space: nowrap;*/
    }
</style>
<h2>會員資料總覽</h2>

<table class="table first table-hover">
    <thead>
        <tr class="border-bottom border-black table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.member_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.available)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_point)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_joinTime)
            </th>
            <th>
                編輯
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.member_id)
                </td>
                <td>
                    @{
                        string strAvailable;
                        if (item.available)
                        {
                            strAvailable = "會員";
                        }
                        else
                        {
                            strAvailable = "停權";
                        }
                    }
                    @Html.DisplayFor(modelItem => strAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_birthday)
                </td>
                <td>
                    @{
                        string displaySex;
                        if (item.member_sex == true)
                        {
                            displaySex = "男";
                        }
                        else if (item.member_sex == false)
                        {
                            displaySex = "女";
                        }
                        else
                        {
                            displaySex = item.member_sex.ToString();
                        }
                    }

                    @Html.DisplayFor(modelItem => displaySex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_point)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.member_joinTime)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.member_id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
